<%- include('../partials/header.ejs') %>

<h3>Take a closer look at this photo...</h3>



    <img src="<%= photo.url %>">

    <p> Posted on <%= photo.date %> by <%= photoOwner.username %> </p>

    <p> About This Photo: <%= photo.description %> </p>

    <a href="/users/<%= photoOwner._id %>/user">Go To Photographer's Page</a>
   


   <%if(user.username == photoOwner.username) {%>
        <form>
            <div>
                <a href="/photos/<%= photo.id %>/edit">Edit this Photo</a>
            </div>
        </form>

        <small>
            <form method="POST" action="/photos/<%= photo.id %>?_method=DELETE">
                <button>Delete This Photo</button>
            </form>
        </small>
    <%}%>
    





<%- include('../partials/footer.ejs') %>